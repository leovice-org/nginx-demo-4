{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "properties": {
    "image": {
      "additionalProperties": false,
      "properties": {
        "repository": {
          "default": "nginx",
          "title": "repository",
          "type": "string"
        },
        "tag": {
          "default": "1.25.4",
          "title": "tag",
          "type": "string"
        }
      },
      "required": [
        "repository",
        "tag"
      ],
      "title": "image",
      "type": "object"
    },
    "service": {
      "additionalProperties": false,
      "properties": {
        "port": {
          "default": 80,
          "title": "port",
          "type": "integer"
        },
        "type": {
          "default": "ClusterIP",
          "title": "type",
          "type": "string"
        }
      },
      "required": [
        "type",
        "port"
      ],
      "title": "service",
      "type": "object"
    }
  },
  "required": [
    "image",
    "service"
  ],
  "type": "object"
}